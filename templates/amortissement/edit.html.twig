{% extends 'base.html.twig' %}
{% block title %}Hello AmortissementController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">

    <h1>Modification de l'échéance</h1>
    
    <table class="table">

        <thead>
            <tr>
                <th scope="col">Date</th>
                <th scope="col">Annuité</th>
                <th scope="col">Intérêts</th>

                <th scope="col">Modifier l'échéance</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                {{ form_start(form) }}
                    <td>
                        {{ form_row(form.dateEcheance) }}
                    </td>
                    <td>
                        {{ form_row(form.montantAmortissement) }}
                    </td>
                    <td>
                        {{ form_row(form.montantInteret) }}
                    </td>
                    <td>
                        <button type="submit" class="btn btn-primary">Modifier</button>
                    </td>
                {{ form_end(form) }}
            </tr>
        </tbody>

    </table>
</div>

{% endblock %}