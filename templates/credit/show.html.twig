{% extends 'base.html.twig' %}

{% block title %}Hello CreditController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 1200px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">

    <h1>Détail du crédit :</h1>

    <h2>Crédit n°{{ credit.id }}</h2>
    <br />
    <p>Taux : {{ credit.taux }} %</p>
    <br />
    <p>Assurance : {{ credit.assurance }} €</p>
    <br />
    <p>Date de première échéance : {{ credit.premiereEcheance|date('d/m/Y') }}</p>
    <br />
    <p>Montant : {{ credit.montant }} {% if credit.montant>0 %} € {% endif %}</p>
    <br />
    <p>Durée : {{ credit.duree }} mois</p>
    <br />

    <button type="button" class="btn btn-info">
        <a href="{{ path ('credit.index')}}">Retour à la liste des crédits</a>
    </button>
    <button type="button" class="btn btn-warning">
        <a href="{{ path ('amortissement.index', {'id': credit.id}) }}">Voir l'amortissement</a>
    </button>
    <button type="button" class="btn btn-danger">
        <a href="{{ path ('credit.delete', {'id': credit.id}) }}">Supprimer</a>
    </button>
    <button type="button" class="btn btn-primary">
        <a href="{{ path ('credit.edit', {'id': credit.id}) }}">Modifier</a>
    </button>

</div>

{% endblock %}